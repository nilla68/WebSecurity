@{
    ViewData["Title"] = "Image Gallery";
}

<form method="post" enctype="multipart/form-data" asp-controller="Image">

    <div class="form-group">
        <div class="text-center my-5">
            <h1 class="display-4 mb-5">Image Gallery</h1>
            <p>Share your images in our Image Gallery!</p>
            <p>Accepted files for uploading are .jpg or .png</p>
            <input type="file" name="uploadFile" class="m-4" />
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>

    <div class="form-group">
        <div class="text-center">
            <input type="submit" value="Upload File" class="btn btn-lg btn-success mb-5" />
        </div>
    </div>
</form>

@foreach (var image in Directory.GetFiles("wwwroot/Images").Where(f => f.EndsWith(".jpg") || f.EndsWith(".png")))
{
    <div class="image-gallery card shadow p-3 bg-white rounded">
        <img src="images/@System.IO.Path.GetFileName(image)" />
    </div>
}